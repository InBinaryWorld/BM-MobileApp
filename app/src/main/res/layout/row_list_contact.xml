<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Row.h18.v8">

    <TextView
        android:id="@+id/tv_contact_name"
        style="@style/BaseTextView.Title.18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Dariusz Szpakowski" />

    <TextView
        android:id="@+id/tv_address_label"
        style="@style/BaseTextView.Label"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:text="Address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_contact_name" />

    <TextView
        android:id="@+id/tv_address"
        style="@style/BaseTextView.Value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_label"
        tools:text="Komorniki, Poland" />


</androidx.constraintlayout.widget.ConstraintLayout>
<resources>

    <!-- Login theme. -->
    <style name="LoginTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBlueDark</item>
        <item name="android:statusBarColor">@color/colorBlueDark</item>
        <item name="android:navigationBarColor">@color/colorBlueDark</item>
        <item name="android:windowBackground">@color/colorBlueDark</item>
    </style>

    <!-- Base application theme. -->
    <style name="BMTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorCoral</item>
        <item name="colorPrimary">@color/colorBlueLight</item>
        <item name="android:statusBarColor">@color/colorBlueDark</item>
    </style>

    <style name="MathParentContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapperContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WideContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HeaderContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">84dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingHorizontal">26dp</item>
        <item name="android:background">@color/colorBlueDark</item>
    </style>

    <style name="MatchConstrainContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="LinearLayout">
        <item name="android:clipToPadding">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayout.Details">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">84dp</item>
    </style>

    <style name="Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Row.TMP_DEV_HEIGHT_80">
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="Row.h18">
        <item name="android:paddingHorizontal">18dp</item>
    </style>

    <style name="Row.h18.v8">
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="Row.h18.v10">
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="Row.h18.v12">
        <item name="android:paddingVertical">12dp</item>
    </style>

    <style name="Row.h18.SettingsRow">
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="Row.h18.SettingsRow.Switch">
        <item name="paddingEnd">10dp</item>
    </style>


    <style name="BottomNavigationView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>`
        <item name="labelVisibilityMode">selected</item>
        <item name="menu">@menu/menu</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_marginHorizontal">6dp</item>
        <item name="android:layout_marginVertical">3dp</item>
    </style>

    <style name="Card.CompanyList">
        <item name="android:layout_height">180dp</item>
    </style>

    <style name="ListView" parent="Widget.AppCompat.ListView">
        <item name="android:clipToPadding">false</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="ListView.VerticalPadding">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">84dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>`
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:background">@color/colorBlack10a</item>
    </style>

    <style name="MaterialTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue_dark_black20</item>
        <item name="boxStrokeErrorColor">@color/colorError</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="MaterialTextInputEditText">
        <item name="android:inputType">text</item>
        <item name="android:textAppearance">@style/TextAppearance</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="BaseTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="BaseTextView.Label">
        <item name="android:textColor">@color/colorBlack60a</item>
    </style>

    <style name="BaseTextView.Label.Bold">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="BaseTextView.Value" />

    <style name="BaseTextView.Value.Bold">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="BaseTextView.Value.Light">
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="BaseTextView.Value.Accent">
        <item name="android:textColor">@color/colorCoral</item>
    </style>

    <style name="BaseTextView.Error">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="BaseTextView.RowSettings">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BaseTextView.HeaderName">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:letterSpacing">0.06</item>
    </style>

    <style name="BaseTextView.Title">
        <item name="android:textColor">@color/colorBlueDark</item>
    </style>

    <style name="BaseTextView.Title.24">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>

    <style name="BaseTextView.Title.18">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="BaseTextView.Wrap">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="BaseTextView.Wrap.Error">
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="BaseTextView.Wrap.Error.S">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="BaseTextView.Wrap.Error.M">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BaseTextView.Wrap.Empty">
        <item name="android:textColor">@color/colorBlack60a</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BaseTextView.Wrap.ActionResult">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="BaseTextView.Wrap.ActionResult.Success">
        <item name="android:textColor">@color/colorSuccess</item>
    </style>

    <style name="BaseTextView.Wrap.ActionResult.Failed">
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="BaseTextView.Wrap.Login">
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="BaseTextView.Wrap.Login.AutoLogin">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BaseTextView.Wrap.Login.SplashTextView">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="BaseSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="thumbTint">@color/colorBlack5</item>
        <item name="trackTint">@color/coral40_black20</item>
        <item name="android:scaleX">1.1</item>
        <item name="android:scaleY">1.1</item>
    </style>

    <style name="BaseSwitch.SettingRow">
        <item name="android:clickable">false</item>
    </style>

    <style name="RoundedCornersAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ExtendedFloatingButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundTint">@color/blue_dark_black20</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ExtendedFloatingButton.Wide">
        <item name="android:minWidth">@dimen/wide_button_min_width</item>
    </style>

    <style name="MaterialButton">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="backgroundTint">@color/blue_dark_black20</item>
    </style>

    <style name="MaterialButton.FullRounded">
        <item name="shapeAppearanceOverlay">@style/RoundedCornersAppearance</item>
    </style>

    <style name="MaterialButton.Rounded">
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="MaterialButton.Rounded.Small">
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>

    </style>

    <style name="MaterialButton.Rounded.LoginButton">
        <item name="android:textColor">@color/colorBlueDark</item>
        <item name="backgroundTint">@color/white_black20</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">270dp</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>


    <style name="BaseProgressBar">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:indeterminateTint">@color/colorBlueLight</item>
    </style>

    <style name="BaseProgressBar.Small">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="BaseProgressBar.XS">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="LogoImageView">
        <item name="android:tint">@color/colorWhite</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">220dp</item>
    </style>

    <style name="ErrorIconImageView">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:src">@drawable/ic_close</item>
        <item name="tint">@color/colorError</item>
    </style>

    <style name="ActionResultImageView">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">190dp</item>
    </style>

    <style name="ActionResultImageView.Success">
        <item name="android:tint">@color/colorSuccess</item>
        <item name="android:src">@drawable/ic_checked</item>
    </style>

    <style name="ActionResultImageView.Failed">
        <item name="android:tint">@color/colorError</item>
        <item name="android:src">@drawable/ic_close</item>
    </style>

    <style name="NextImageView">
        <item name="android:src">@drawable/ic_arrow_right</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="tint">@color/colorBlack40</item>
    </style>

    <style name="RemoveItemImageView">
        <item name="android:src">@drawable/ic_close</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="tint">@color/colorBlueLight</item>
    </style>

    <style name="BarcodeScannerImageView">
        <item name="android:src">@drawable/ic_barcode</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="BarcodeScannerImageView.Header">
        <item name="tint">@color/colorWhite</item>
    </style>

    <style name="BarcodeScannerImageView.Form">
        <item name="tint">@color/colorBlack</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:overlapAnchor">false</item>
    </style>

</resources>

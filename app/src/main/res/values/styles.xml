<resources>

    <!-- Login theme. -->
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBlueDark</item>
        <item name="android:statusBarColor">@color/colorBlueDark</item>
        <item name="android:navigationBarColor">@color/colorBlueDark</item>
        <item name="android:windowBackground">@color/colorBlueDark</item>
    </style>

    <!-- Base application theme. -->
    <style name="BMTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorCoral</item>
        <item name="colorPrimary">@color/colorBlueLight</item>
        <item name="android:statusBarColor">@color/colorBlueDark</item>
        <item name="android:navigationBarColor">@color/colorBlueDark</item>
    </style>

    <style name="MainContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapperContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ScrollContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseTextView.AutoLogin">
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BaseTextView.SplashTextView">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/roboto_thin</item>
    </style>

    <style name="BaseButton">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="LogoImageView">
        <item name="android:tint">@color/colorWhite</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">220dp</item>
    </style>

    <style name="BaseButton.LoginButton">
        <item name="android:backgroundTint">@color/colorWhite</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">274dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="BaseProgressBar">
        <item name="android:layout_width">@dimen/progress_bar_size</item>
        <item name="android:layout_height">@dimen/progress_bar_size</item>
        <item name="android:indeterminateTint">@color/colorBlueLight</item>
    </style>

</resources>

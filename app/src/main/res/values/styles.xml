<resources>

    <!-- Splash theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBlueDark</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/colorBlueDark</item>
    </style>

    <!-- Base application theme. -->
    <style name="BMTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBlueLight</item>
        <item name="android:colorPrimaryDark">@color/colorBlueDark</item>
        <item name="colorAccent">@color/colorCoral</item>
    </style>

    <style name="MainContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ScrollContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseTextView.SplashTextView">
        <item name="android:textSize">@dimen/splash_app_name_size</item>
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/colorPlaster</item>
    </style>

</resources>
